<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/fence_list_background"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择目标MAC/手机号"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                />

            <RadioGroup
                android:id="@+id/rg_input_type"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MAC地址"
                    android:textSize="15sp"
                    android:textColor="#2286bf"
                    />
                <RadioButton
                    android:id="@+id/rb_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:text="手机号"
                    android:textSize="15sp"
                    android:textColor="#2286bf"
                    />
            </RadioGroup>

            <com.lgc.mysliding.views.MyEditTextDel
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:background="@null"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:maxLines="1"
                android:visibility="gone"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#858585"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/view" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:background="#858585"
                android:id="@+id/view2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="取消"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#b91d1d"
                android:id="@+id/btn_cancel_search"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="搜索"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#21793d"
                android:id="@+id/btn_navi_search"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/view2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>