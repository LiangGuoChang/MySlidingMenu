<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    >

    <com.lgc.mysliding.views.MyEditTextDel
        android:id="@+id/et_add_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:background="@null"
        android:singleLine="true"
        android:maxLength="20"
        android:hint="请输入监控号码"
        android:textSize="15sp"
        android:digits="@string/search_mac"
        android:layout_toLeftOf="@+id/btn_save_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="保存"
        android:textSize="15sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_save_phone"
        android:layout_alignBottom="@+id/et_add_phone" />

</RelativeLayout>