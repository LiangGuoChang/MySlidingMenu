<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/inforwindow_bg"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="围栏名称 :"
            android:textSize="15sp"
            android:textColor="#000000"
            />
        <!--<EditText-->
            <!--android:id="@+id/et_fence_name"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:hint="围栏1"-->
            <!--android:maxLines="1"-->
            <!--android:maxLength="10"-->
            <!--/>-->
        <com.lgc.mysliding.views.MyEditTextDel
            android:id="@+id/et_fence_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:maxLength="10"
            android:background="@null"
            android:drawablePadding="5dp"
            android:hint="请输入围栏名"
            android:textSize="15sp"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="围栏半径 :"
            android:textSize="15sp"
            android:textColor="#000000"
            />
        <com.lgc.mysliding.views.MyEditTextDel
            android:id="@+id/et_fence_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:maxLength="10"
            android:textSize="15sp"
            android:padding="10dp"
            android:inputType="number"
            android:hint=" 请输入围栏半径 "
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:id="@+id/tv_falter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="报警类型 :"
                android:textSize="15sp"
                android:textColor="#000000"
                />
            <RadioGroup
                android:id="@+id/rg_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                >
                <RadioButton
                    android:id="@+id/rb_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进报警"
                    android:textColor="#2286bf"
                    android:textSize="15sp"
                    />
                <RadioButton
                    android:id="@+id/rb_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="出报警"
                    android:textColor="#2286bf"
                    android:textSize="15sp"
                    />
                <RadioButton
                    android:id="@+id/rb_inout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="进/出报警"
                    android:textColor="#2286bf"
                    android:textSize="15sp"
                    />

            </RadioGroup>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/tv_pNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监控号码 :"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <!--<com.lgc.mysliding.views.MyEditTextDel-->
            <!--android:id="@+id/et_fence_phone"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:padding="10dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:background="@null"-->
            <!--android:maxLines="1"-->
            <!--android:maxLength="20"-->
            <!--android:hint="请输入监控号码"-->
            <!--android:textSize="15sp"-->
            <!--android:digits="@string/search_mac"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_toLeftOf="@+id/iv_add_phone"-->
            <!--android:layout_toStartOf="@+id/iv_add_phone"-->
            <!--android:layout_toRightOf="@id/tv_pNum"-->
            <!--android:layout_toEndOf="@id/tv_pNum"-->
            <!--/>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/iv_add_phone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/sp_phone_list"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_add_phone"
            android:layout_toStartOf="@id/iv_add_phone"
            android:layout_toRightOf="@id/tv_pNum"
            android:layout_toEndOf="@id/tv_pNum"
            android:spinnerMode="dialog"
            >
        </Spinner>

    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

            <Button
                android:id="@+id/btn_unset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="#ba392e"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                />
            <Button
                android:id="@+id/btn_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="#3b7c69"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>