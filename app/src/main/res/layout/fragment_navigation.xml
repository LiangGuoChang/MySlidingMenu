<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lgc.mysliding.fragment.NavigationFragment">

   <RelativeLayout
       android:id="@+id/rl_navigate_top"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:background="#ffffff"
       >

       <com.lgc.mysliding.views.MyEditTextDel
           android:id="@+id/et_navi_num"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:hint="输入MAC地址/手机号码"
           android:background="@null"
           android:drawablePadding="5dp"
           android:padding="10dp"
           android:textSize="15sp"
           android:textColor="#000000"
           android:maxLines="1"
           android:maxLength="20"
           android:digits="@string/search_mac"
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/iv_navi"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"/>

       <ImageView
           android:id="@+id/iv_navi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/search_icon"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="5dp"
           android:layout_marginEnd="5dp"
           />

   </RelativeLayout>

    <com.amap.api.maps.TextureMapView
        android:id="@+id/t_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_navigate_top"
        >
    </com.amap.api.maps.TextureMapView>
    
    <Button
        android:id="@+id/btn_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始导航"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
