<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:id="@+id/rl_poi_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_poi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/nv_back"
            />
        <com.lgc.mysliding.views.MyEditTextDel
            android:id="@+id/et_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_poi_back"
            android:layout_toEndOf="@+id/iv_poi_back"
            android:background="@null"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="3.8dp"
            android:layout_marginBottom="3.8dp"
            android:layout_marginLeft="2.8dp"
            android:layout_marginStart="2.8dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:textColorHint="@android:color/white"
            android:layout_toLeftOf="@+id/btn_poi_search"
            android:layout_toStartOf="@+id/btn_poi_search" />

        <Button
            android:layout_width="52.8dp"
            android:layout_height="38.6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2.8dp"
            android:layout_marginBottom="2.8dp"
            android:layout_marginRight="3.8dp"
            android:layout_marginLeft="3.8dp"
            android:text="搜索"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:id="@+id/btn_poi_search"
            android:background="@drawable/poi_search_select"
            />

    </RelativeLayout>

    <View
        android:id="@+id/poi_blank_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e0e0"
        android:layout_below="@+id/rl_poi_line"
        />

    <ListView
        android:id="@+id/lv_poi_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/poi_blank_view"
        android:scrollbars="none"
        >
    </ListView>

</RelativeLayout>
