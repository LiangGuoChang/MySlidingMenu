<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <RelativeLayout
        android:id="@+id/ll_fence_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_dismiss"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fence_listview_back"
            >

            <View
                android:id="@+id/listview_a"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                />

            <ListView
                android:id="@+id/lv_fence_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/listview_a"
                android:layout_above="@+id/listview_b"
                android:divider="@null"
                android:dividerHeight="2dp"
                android:scrollbars="none"
                >
            </ListView>

            <View
                android:id="@+id/listview_b"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/iv_dismiss_fence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dismiss_fence"
                android:layout_centerHorizontal="true"
                android:scaleType="center"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#7c7b7b"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>